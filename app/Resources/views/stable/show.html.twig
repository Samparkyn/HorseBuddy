{% extends 'base.html.twig' %}

{% block title %}Stable {{ stable.name }}{% endblock %}

{% block body %}
    <h2 class="horse-name">{{ stable.name }}</h2>

    <div class="horse-container">
        <div class="horse-photo"></div>
        <div class="horse-details">
            <dl class="horse-details-list">
                <dt>Location:</dt>
                <dd>{{ stable.location }}</dd>
                <dt>Capacity:</dt>
                <dd>{{ stable.capacity }}</dd>
                
                <img src="{{ asset('bundles/images/horses/{{ horse.image }}') }}" />
            </dl>
        </div>
    </div>
    
    <ul>
      
      <li>
          <a href="{{ path('stable_edit', { 'id': stable.id }) }}">Edit</a>
      </li>
      
      <li>
        {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </li>
        <li>
            <a href="{{ path('stable') }}">Back to Stable list</a>
        </li>
        <li>
            <a href="{{ path('horse') }}">Horse List</a>
        </li>
        
        
    </ul>
{% endblock %}
